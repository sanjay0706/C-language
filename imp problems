#include <stdio.h>

int main() {
 int num,rev=0,rem,temp;
 printf("enter the number to get reverse of it=");
 scanf("%d",&num);
 temp=num;
 
 while(num>0)
 {
     rem=num%10;
     rev=rev*10+rem;
     num=num/10;
 }
     printf("\nreverse of given number=%d\n",rev);
     
     if(rev==temp)
     {
         printf("it is a palindrome \n");
         
     }
     else{
         printf("it is not palindrome\n");
     }
 
 return 0;
}

out put:
enter the number to get reverse of it=787

reverse of given number=787
it is a palindrome 


