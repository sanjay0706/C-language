#include <stdio.h>

int main() {
 int num,rev=0,rem,sum=0;
 printf("enter the number to get reverse of it=");
 scanf("%d",&num);
 while(num>0)
 {
     rem=num%10;
     rev=rev*10+rem;
     num=num/10;
     sum = sum +rem;
     
 }
     printf("\nreverse of given number=%d",rev);
     printf("\nsum of given numbers =%d",sum);
     
 
 return 0;
}

out put:
enter the number to get reverse of it=987

reverse of given number=789
sum of given numbers =24

