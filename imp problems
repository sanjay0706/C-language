#include <stdio.h>

int main() {
 int num,rem,sum=0,temp;
 printf("enter the number =");
 scanf("%d",&num);
 temp=num;
 
 while(num>0)
 {
     rem=num%10;
     sum = sum +rem*rem*rem;
     num=num/10;
}
     if(sum==temp)
     { printf("it is armstrong");}
     else{
         printf("it is not armstrong");
     }
     return 0;
}
out put:

enter the number =153    ,     it will works on only the following numbers= 153,370,371,407
it is armstrong

