#include<stdio.h>
int main()
{
    char ch;
    printf("enter a charcter=");
    scanf("%c",&ch);
    if(ch>='A'&&ch<='Z')
    {
        printf("%c is a upper case letter ",ch);
        
    }
    else if(ch>='a'&&ch<='z')
    {
        printf("%c is a lower case letter",ch);
    }
    else
    {
        printf("%c is neither uppercase nor lowercase letter",ch);
    }
    return 0;
}
out put
enter a charcter=o
o is a lower case letter
