#include<stdio.h>
int main()
{
    int n,evensum=0,oddsum=0;
    int i;
    printf("enter a number=");
    scanf("%d",&n);
    for(i=0;i<=n;i++)
    {
        if(i%2==0)
        {
            evensum+=i;
        }
        else if(i%2!=0)
        {
            oddsum+=i;
            
        }
     }
     printf("even sum=%d\n",evensum);
        printf("odd sum=%d\n",oddsum);
    return 0;
}

output
enter a number=5
even sum=6
odd sum=9
