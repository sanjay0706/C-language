#include<stdio.h>
int main()
{
    int i,n,sum=0;
    printf("enter a number=");
    scanf("%d",&n);
    for(i=0;i<=n;i++)
    
    {
        printf("%d\n",i);
        sum+=i;
    }
    printf("sum of given natural numbers=%d\n",sum);
    return 0;
}

