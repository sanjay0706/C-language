#include<stdio.h>
int main()
{
    int i,n,factorial=1;
    printf("enter a value=");
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    {
        factorial=factorial*i;
    }
    printf("factorial of given number %d=%d\n",n,factorial);
    return 0;
}
out put
enter a value=6
factorial of given number 6=720
