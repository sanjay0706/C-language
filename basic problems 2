#include<stdio.h>
int main()
{
    char l='e';
    
    if(l>='a'&&l<='z'
)
    {
        if(l=='a'||l=='e'||l=='i'||l=='o'||l=='u')
        {
            printf("the given character is vowel");
        }
        else
        {
            printf("the given character is consonent");
        }
    }
    return 0;
}
out put
the given character is vowel
